<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiOefeningen.Views.NaamTonenPage"
             Title="Naam tonen">
    <StackLayout>
        <HorizontalStackLayout>
            <Label Text="Geef een naam in: " Margin="10"/>
            <Entry Placeholder="Naam" Margin="5" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Geef een getal in: " Margin="10"/>
            <Entry Placeholder="Getal" Margin="5" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="5" HorizontalOptions="Start" Padding="10">
            <Button Text="Naam tonen" />
            <Button Text="Resulaat leegmaken" />
        </HorizontalStackLayout>
        
        <Label Text="Resultaat" Margin="10"/>
    </StackLayout>
</ContentPage>